		</variation>
		<variation name="OpenMenuEntityForBarcodeTestVariation4">
			<data name="menuItem" xsi:type="string">Inventory Management > Scan Barcode</data>
			<data name="pageTitle" xsi:type="string">Scan Barcodes</data>
			<constraint name="Magento\Backend\Test\Constraint\AssertBackendPageIsAvailable" />
		</variation>
		<variation name="OpenMenuEntityForBarcodeTestVariation5">
