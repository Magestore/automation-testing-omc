<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/variations.xsd">
	<testCase name="Magento\BarcodeSuccess\Test\TestCase\Adminhtml\BarcodeMenu\OpenMenuEntityForBarcodeTest" summary="Navigate through Barcode menu" ticketId="MAGESTORE-1">
		<variation name="OpenMenuEntityForBarcodeTestVariation1">
			<data name="menuItem" xsi:type="string">Inventory Management > Barcode Listing</data>
			<data name="pageTitle" xsi:type="string">Manage Barcodes</data>
			<data name="buttons" xsi:type="string">import, generate</data>

			<constraint name="Magento\Backend\Test\Constraint\AssertBackendPageIsAvailable" />
			<constraint name="Magento\BarcodeSuccess\Test\Constraint\Adminhtml\AssertGridPageActionButtonsIsVisible" />
			<constraint name="Magento\BarcodeSuccess\Test\Constraint\Adminhtml\AssertGridTableIsVisible" />
		</variation>
		<variation name="OpenMenuEntityForBarcodeTestVariation2">
			<data name="menuItem" xsi:type="string">Inventory Management > Generate Barcodes</data>
			<data name="pageTitle" xsi:type="string">Generate Barcode</data>
			<data name="buttons" xsi:type="string">back, save</data>

			<constraint name="Magento\Backend\Test\Constraint\AssertBackendPageIsAvailable" />
			<constraint name="Magento\BarcodeSuccess\Test\Constraint\Adminhtml\AssertGridPageActionButtonsIsVisible" />
		</variation>
		<variation name="OpenMenuEntityForBarcodeTestVariation3">
			<data name="menuItem" xsi:type="string">Inventory Management > Import Barcodes</data>
			<data name="pageTitle" xsi:type="string">Import Barcode</data>
