				<item name="0" xsi:type="array">
					<item name="qty" xsi:type="number">0</item>
					<item name="isInStock" xsi:type="boolean">false</item>
				</item>
			</data>

			<constraint name="Magento\Webpos\Test\Constraint\ManageStocks\AssertProductInfoInBackend" />
			<constraint name="Magento\Webpos\Test\Constraint\ManageStocks\AssertProductOutOfStockFrontend" />
		</variation>
		<variation name="WebposManageStocksUpdateTestVariation2">
			<data name="staff/data/username" xsi:type="string">magentoadmin</data>
			<data name="staff/data/password" xsi:type="string">admin123</data>
			<data name="products" xsi:type="array">
				<item name="0" xsi:type="array">
					<item name="qty" xsi:type="number">150</item>
					<item name="isInStock" xsi:type="boolean">true</item>
				</item>
				<item name="1" xsi:type="array">
					<item name="qty" xsi:type="number">160</item>
					<item name="isInStock" xsi:type="boolean">true</item>
				</item>
				<item name="2" xsi:type="array">
					<item name="qty" xsi:type="number">170</item>
