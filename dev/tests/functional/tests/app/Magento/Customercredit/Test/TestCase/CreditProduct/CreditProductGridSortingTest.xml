<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/variations.xsd">
    <testCase name="Magento\Customercredit\Test\TestCase\CreditProduct\CreditProductGridSortingTest" summary="Grid UI Component Sorting" ticketId="MAGETWO-4122017">
        <variation name="Credit Product grid sorting test">
            <data name="tag" xsi:type="string">to_maintain:yes</data>
            <data name="description" xsi:type="string">Verify credit product grid sorting</data>
            <data name="itemsCount" xsi:type="string">1</data>
            <data name="fixtureName" xsi:type="string">creditProduct</data>
            <data name="fixtureDataSet" xsi:type="string">default</data>
            <data name="steps" xsi:type="array">
                <item name="0" xsi:type="string">\Magento\Customercredit\Test\TestStep\PrepareCreditProductStep</item>
            </data>
            <data name="columnsForSorting" xsi:type="array">
                <item name="id" xsi:type="string">ID</item>
                <item name="name" xsi:type="string">Name</item>
                <item name="sku" xsi:type="string">SKU</item>
                <item name="qty" xsi:type="string">Quantity</item>
                <item name="visibility" xsi:type="string">Visibility</item>
                <item name="visibility" xsi:type="string">Status</item>
            </data>
            <data name="pageClass" xsi:type="string">Magento\Customercredit\Test\Page\Adminhtml\CreditProductIndex</data>
            <data name="gridRetriever" xsi:type="string">getCreditProductGrid</data>
            <constraint name="Magento\Ui\Test\Constraint\AssertGridSorting"/>
        </variation>
    </testCase>
</config>
