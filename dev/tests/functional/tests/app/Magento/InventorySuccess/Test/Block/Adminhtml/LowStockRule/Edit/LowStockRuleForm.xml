			<warehouse_ids>
				<selector>[name='warehouse_ids']</selector>
				<input>multiselect</input>
			</warehouse_ids>
		</fields>
	</conditions>
	<actions>
		<class>\Magento\Ui\Test\Block\Adminhtml\Section</class>
		<selector>[data-index="actions"]</selector>
